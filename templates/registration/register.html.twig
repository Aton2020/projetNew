{% extends 'base.html.twig' %}

{% block title %}Enregistrez-vous{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <h1 class="text-center">Enregistrez-vous :</h1>
    <p class="text-center">(*)Champs obligatoires</p>
    <div class="container text-dark w-75>
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.code_postal) }}
        {{ form_row(registrationForm.ville) }}
        {{ form_row(registrationForm.adresse) }}
        {{ form_row(registrationForm.complement_adresse) }}
        {{ form_row(registrationForm.plainPassword,{
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary mb-2" type="submit">Valider</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
