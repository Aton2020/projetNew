{% extends 'base.html.twig' %}

{% block main %}


<div class="container">
    <div class="row">
        {% for produit in category.produits %}
            <div class="col-4 p-3">
                <div class="card">
                    <img src="{{ asset('img_produits/' ~ produit.photo) }}" class="card-img-top" alt="{{ produit.nom }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nom }}</h5>
                        <p class="card-text">{{ produit.description }}</p>
                        <p class="card-text"><b>{{ produit.prix /100 }} â‚¬</b></p>
                        <a href="{{ path('app_panier_ajout', {'id': produit.id}) }}" class="btn btn-dark">Ajouter au panier</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>


{% endblock %}